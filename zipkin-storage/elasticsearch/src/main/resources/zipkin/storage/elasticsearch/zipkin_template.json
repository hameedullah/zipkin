{
  "template": "${__INDEX__}-*",
  "settings": {
    "index.number_of_shards": ${__NUMBER_OF_SHARDS__},
    "index.number_of_replicas": ${__NUMBER_OF_REPLICAS__},
    "index.requests.cache.enable": true,
    "analysis": {
      "analyzer": {
        "lowercase": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        },
        "traceId_analyzer": {
          "tokenizer": "traceId_tokenizer"
        }
      },
      "tokenizer": {
        "traceId_tokenizer": {
          "type": "pattern",
          "pattern": "([0-9a-f]{1,16})$",
          "group": 1
        }
      }
    }
  },
  "mappings": {
    "_default_": {
      "dynamic_templates": [
        {
          "strings": {
            "mapping": {
              "index": "not_analyzed",
              "type": "string"
            },
            "match_mapping_type": "string",
            "match": "*"
          }
        },
        {
          "value": {
            "match": "value",
            "mapping": {
              "match_mapping_type": "string",
              "index": "not_analyzed",
              "ignore_malformed": true,
              "type": "string"
            }
          }
        },
        {
          "serviceName": {
            "match": "serviceName",
            "mapping": {
              "type": "string",
              "analyzer": "lowercase"
            }
          }
        },
        {
          "annotations": {
            "match": "annotations",
            "mapping": {
              "type": "nested"
            }
          }
        },
        {
          "binaryAnnotations": {
            "match": "binaryAnnotations",
            "mapping": {
              "type": "nested"
            }
          }
        }
      ],
      "_all": {
        "enabled": false
      }
    },
    "span": {
      "properties": {
        "traceId": {
          "type": "string",
          "analyzer": "traceId_analyzer"
        },
        "timestamp_millis": {
          "type":   "date",
          "format": "epoch_millis"
        },
        "annotations": {
          "type": "nested"
        },
        "binaryAnnotations": {
          "type": "nested"
        }
      }
    }
  }
}
